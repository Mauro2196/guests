<div class="guests-page">
  <div class="container">
    <div class="row">
      <div class="col">
        <header class="d-flex justify-content-between align-items-center my-5">
          <h1>Guests</h1>
        </header>

        <table class="table mt-5">
          <thead>
            <tr>
              <th>Email</th>
              <th>Name</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @guests.each do |guest| %>
              <tr>
                <td><%= guest.email %></td>
                <td><%= guest.name %></td>
                <td><%= guest.status %></td>
                <td class="text-right">
                  <%= link_to "Going", going_guest_path(guest), class: "btn btn-outline-success" unless guest.going? %>
                  <%= link_to "Not Going", not_going_guest_path(guest), class: "btn btn-outline-danger" unless guest.not_going? %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
